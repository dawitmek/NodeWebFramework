<%- include('../_sections/_header'); -%>

<div class="row">
    <div class="col-md-6 mt-2">
        <h1>My Posts</h1>
    </div>
</div>
<div class="col-md-6" style="margin-bottom:10px;">
    <a href="/posts/add" type="button" class="btn btn-primary">New Post</a>
</div>

<div class="inner-container d-flex flex-wrap " style="width: 100%">
    <!--List all the posts-->
    <% posts.forEach( post => { %>
        <div class="text-left border border-dark col-sm-4 col-md-4 p-3" >
            <div class="thumbnail">
                <img src="data:image/svg+xml;base64,"
                    alt="logo" style="height:200px;width:100%;display:block">
                <div class="caption">
                    <h3>
                        <%= post.title %>
                    </h3>
                    <p>
                        <%= post.content %>
                    </p>
                    <hr> <hr>
                    <p><a href="posts/<%= post._id %>" class="btn btn-primary" role="button">Read</a> <a href="posts/edit/<%= post._id %>" class="btn btn-secondary"
                            role="button">Edit</a></p>
                </div>
            </div>
        </div>
        <% }) %>
</div>




<%- include ('../_sections/_footer'); -%>